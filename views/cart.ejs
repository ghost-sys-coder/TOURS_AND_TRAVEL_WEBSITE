<section class="cart--page" id="cart--page">
    <h1>Your Bookings</h1>

    <div class="container">
        <% if(cartProducts) { %>
            <% cartProducts.forEach(element => { %>
                <div class="product">
                    <div class="image">
                        <img src=<%= element?.packageImages[0] %> alt="image">
                    </div>
                    <div class="content">
                        <h1 class="title"><%= element?.packageTitle %></h1>
                        <p class="destination">Destination: <span><%= element?.packageDestination %></span></p>
                        <p class="desc"><%= element?.packageDescription %></p>
                        <h3 class="price">Price: <span>$<%= element?.totalPrice %></span></h3>
                        <h3 class="date"><%= element?.availableDate %></h3>
                    </div>
                </div>
            <% }); %>
        <% } %>

        <% if(cartProducts.length === 0) { %>
            <h3>You haven't made any bookings</h3>
        <% } %>
    </div>
</section>

